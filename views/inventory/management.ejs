<main class="management-container">
  <h1>Inventory Management</h1>

  <!-- flash  -->
  <% if (flashMessage) { %>
    <div class="flash-message">
      <p><%- flashMessage %></p>
    </div>
  <% } %>

  <div class="management-options">
    <div class="management-card">
      <h2>Classification Management</h2>
      <a href="/inv/add-classification" class="btn-primary">
        Add New Classification
      </a>
    </div>
    
    <div class="management-card">
      <h2>Inventory Management</h2>
      <a href="/inv/add-inventory" class="btn-primary">
        Add New Inventory Item
      </a>
    </div>
  </div>

  <section>
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to see its inventory items.</p>

    <form>
      <label for="classificationSelect">Classification:</label>
     <%- classificationSelect %>
    </form>


    <table id="inventoryDisplay"></table>

    <noscript>JavaScript must be enabled to use this page.</noscript>
  </section>

  <script src="/js/inventory.js"></script>

</main>
