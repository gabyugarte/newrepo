<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <main class="form-container">
        <h1>Add New Inventory Item</h1>

        <!-- Flash Messages -->
<% if (typeof flashMessage !== "undefined" && flashMessage) { %>
  <div class="flash-message notice">
      <p><%= flashMessage %></p>
  </div>
<% } %>


        <% if (errors && errors.length > 0) { %>
            <div class="flash-message error">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/inv/update" method="post" class="inventory-form">
            <!-- Classification -->
            <div class="form-group">
                <label for="classificationList">Classification *</label>
                <%- classificationSelect %>
            </div>

            <!-- Make & Model -->
            <div class="form-row">
                <div class="form-group">
                    <label for="inv_make">Make *</label>
                    <input type="text" id="inv_make" name="inv_make" required 
                           value="<%= inv_make || '' %>" maxlength="50">
                </div>
                <div class="form-group">
                    <label for="inv_model">Model *</label>
                    <input type="text" id="inv_model" name="inv_model" required 
                           value="<%= inv_model || '' %>" maxlength="50">
                </div>
            </div>

            <!-- Year, Price, Miles -->
            <div class="form-row">
                <div class="form-group">
                    <label for="inv_year">Year *</label>
                    <input type="number" id="inv_year" name="inv_year" required 
                           min="1900" max="<%= new Date().getFullYear() + 1 %>"
                           value="<%= inv_year || '' %>">
                </div>
                <div class="form-group">
                    <label for="inv_price">Price *</label>
                    <input type="number" id="inv_price" name="inv_price" required 
                           min="0" step="0.01" value="<%= inv_price || '' %>">
                </div>
                <div class="form-group">
                    <label for="inv_miles">Miles *</label>
                    <input type="number" id="inv_miles" name="inv_miles" required 
                           min="0" value="<%= inv_miles || '' %>">
                </div>
            </div>

            <!-- Color -->
            <div class="form-group">
                <label for="inv_color">Color *</label>
                <input type="text" id="inv_color" name="inv_color" required 
                       value="<%= inv_color || '' %>" maxlength="30">
            </div>

            <!-- Image Paths -->
            <div class="form-row">
                <div class="form-group">
                    <label for="inv_image">Image Path</label>
                    <input type="text" id="inv_image" name="inv_image" 
                           value="<%= inv_image || '/images/vehicles/no-image.png' %>">
                    <p class="form-note">Default: /images/vehicles/no-image.png</p>
                </div>
                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail Path</label>
                    <input type="text" id="inv_thumbnail" name="inv_thumbnail" 
                           value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">
                    <p class="form-note">Default: /images/vehicles/no-image-tn.png</p>
                </div>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="inv_description">Description *</label>
                <textarea id="inv_description" name="inv_description" required 
                          rows="4" maxlength="500"><%= inv_description || '' %></textarea>
            </div>
            <input type="hidden" name="inv_id" value="<%= inv_id %>">
            <div class="form-group">
                <button type="submit" class="btn-primary">Modify Vehicle</button>
                <a href="/inv" class="btn-secondary">Cancel</a>
            </div>

        </form>
    </main>

    <script src="/js/form-validation.js"></script>
</body>
</html>