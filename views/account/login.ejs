<main class="form-page">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <% if (messages && messages.notice) { %>
    <div class="flash-message">
      <% messages.notice.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (typeof errors !== 'undefined' && errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>



  <!-- Login Form -->
   <form id="loginForm" action="/account/login" method="post" class="login-form">
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required>

    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password" required>

    <button type="submit">Login</button>
  </form>

  <p class="register-link">
    Donâ€™t have an account? <a href="/account/register">Register here</a>
  </p>
</main>


